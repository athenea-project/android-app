<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
      android:id="@+id/input_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="15dp"
      android:hint="Course Name"
      android:singleLine="true"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <EditText
        android:id="@+id/input_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:hint="â‚¬/hora"
        android:singleLine="true"/>

      <EditText
        android:id="@+id/input_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:hint="Lugar"
        android:singleLine="true"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat"/>

    </LinearLayout>

    <EditText
      android:id="@+id/input_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:layout_marginVertical="15dp"
      android:gravity="center"
      android:hint="Description"
      android:textAlignment="textStart"
      tools:ignore="RtlCompat"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="horizontal">
      <EditText
        android:id="@+id/input_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:gravity="center_vertical|center_horizontal|start"
        android:hint="Tags"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat"/>
      <ImageButton
        android:id="@+id/button1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|center_horizontal|end"
        android:adjustViewBounds="false"
        android:background="@android:drawable/screen_background_light_transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_box_white_48dp"
        android:text="Button"
        android:tint="@color/colorAccent"/>
    </LinearLayout>

    <me.gujun.android.taggroup.TagGroup
      android:id="@+id/tag_group"
      style="@style/TagGroup"
      android:theme="@style/AppTheme"/>

  </LinearLayout>
</android.support.constraint.ConstraintLayout>